package com.hackbulgaria.corejava;

public class LinkedList {
	Element element;
	int size;
	
	public LinkedList(){
		size=0;
	}
	
	public void add(int e){
		Element e1 = new Element(e);
		if(size==0){
			element=e1;
			size++;
		}
		else {
			getLast().next.value=e;
		}
	}
	
	public Element getLast(){
		Element e=element;
		while(e.next!=null){
			e=e.next;
		}
		return e;
	}

}


class Element {
	int value;
	Element next=null;
	
	public Element(int v){
		this.value=v;
	}
}